// Helper function to sum all elements in an array
function sumArray(arr) {
    return arr.reduce((sum, current) => sum + current, 0);
}

// Helper function to calculate the average of an array
function averageArray(arr) {
    const sum = sumArray(arr);
    return sum / arr.length;
}

// Helper function to find the maximum value in an array
function maxArray(arr) {
    return Math.max(...arr);
}

// Main function to demonstrate the helper functions
function main() {
    const numbers = [10, 20, 30, 40, 50];

    console.log("Array:", numbers);

    const sum = sumArray(numbers);
    console.log("Sum of array:", sum);

    const average = averageArray(numbers);
    console.log("Average of array:", average);

    const max = maxArray(numbers);
    console.log("Maximum value in array:", max);
}

// Run the main function
main();
